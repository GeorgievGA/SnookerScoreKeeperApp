<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.georgi.snookerscorekeeperapp.MainActivity">

    <LinearLayout
        android:id="@+id/score_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Player 1"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/player1_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="0"
                android:textSize="34sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>



            <Button
                android:id="@+id/red_ballA"
                android:onClick="redA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red Ball"
                android:drawableLeft="@drawable/red_ball"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Select potted color ball:"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

            <Button
                android:id="@+id/yellow_ballA"
                android:onClick="yellowA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/yellow_ball"
                android:text="+2"
                android:layout_marginRight="2dp"
                />
            <Button
                android:id="@+id/green_ballA"
                android:onClick="greenA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/green_ball"
                android:text="+3"
                android:layout_marginLeft="2dp"
                />
</LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/brown_ballA"
                    android:onClick="brownA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/brown_ball"
                    android:text="+4"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/blue_ballA"
                    android:onClick="blueA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/blue_ball"
                    android:text="+5"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/pink_ballA"
                    android:onClick="pinkA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/pink_ball"
                    android:text="+6"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/black_ballA"
                    android:onClick="blackA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/black_ball"
                    android:text="+7"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Player commited foul"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/foul_fourA"
                    android:onClick="foulFourA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4PT"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/foul_fiveA"
                    android:onClick="foulFiveA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5PT"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/foul_sixA"
                    android:onClick="foulSixA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6PT"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/foul_sevenA"
                    android:onClick="foulSevenA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7PT"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:src="@drawable/cue_snooker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Player 2"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/player2_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="0"
                android:textSize="34sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>



            <Button
                android:id="@+id/red_ballB"
                android:onClick="redB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red Ball"
                android:drawableLeft="@drawable/red_ball"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Select potted color ball:"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/yellow_ballB"
                    android:onClick="yellowB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/yellow_ball"
                    android:text="+2"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/green_ballB"
                    android:onClick="greenB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/green_ball"
                    android:text="+3"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/brown_ballB"
                    android:onClick="brownB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/brown_ball"
                    android:text="+4"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/blue_ballB"
                    android:onClick="blueB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/blue_ball"
                    android:text="+5"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/pink_ballB"
                    android:onClick="pinkB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/pink_ball"
                    android:text="+6"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/black_ballB"
                    android:onClick="blackB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/black_ball"
                    android:text="+7"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Player commited foul"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/foul_fourB"
                    android:onClick="foulFourB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4PT"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/foul_fiveB"
                    android:onClick="foulFiveB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5PT"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/foul_sixB"
                    android:onClick="foulSixB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6PT"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:id="@+id/foul_sevenB"
                    android:onClick="foulSevenB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7PT"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_board"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#4CAF50"
        android:onClick="Reset"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="Start New Game" />

</RelativeLayout>
